<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="1.2.2" author="Nazar Akolovych">
        <createTable tableName="comments">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="comment" type="text"/>

            <column name="created" type="timestamp"/>
            <column name="updated" type="timestamp"/>
            <column name="estimate_of_tour" type="double"/>

            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>

            <column name="tour_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.2.11" author="Nazar Akolovych">
        <addForeignKeyConstraint baseTableName="comments"
                                 baseColumnNames="user_id"
                                 constraintName="fk_comments_users"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="1.2.12" author="Nazar Akolovych">
        <addForeignKeyConstraint baseTableName="comments"
                                 baseColumnNames="tour_id"
                                 constraintName="fk_comments_tours"
                                 referencedTableName="tours"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>