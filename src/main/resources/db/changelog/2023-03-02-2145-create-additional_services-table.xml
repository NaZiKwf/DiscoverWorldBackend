<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="1.2.1" author="Nazar Akolovych">
        <createTable tableName="additional_services">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>


            <column name="tour_id" type="uuid">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="price" type="real"/>
            <column name="additional_services_type" type="varchar(250)"/>

        </createTable>
    </changeSet>

    <changeSet id="1.1.10" author="Nazar Akolovych">
        <addForeignKeyConstraint baseTableName="additional_services"
                                 baseColumnNames="tour_id"
                                 constraintName="fk_additional_services_tours"
                                 referencedTableName="tours"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>